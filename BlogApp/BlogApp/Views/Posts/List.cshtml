@model List<Post>

    <div class="row">
        <div class="col-12">
            <h2>Post Listesi</h2>
            <a href="/users/create" class="btn btn-primary">New Post</a>
            <table class="table tabled-bordered">
                <thead>
                    <tr>
                        <th style="width:200px;">Image</th>
                        <th>Title</th>
                        <th>Is Active</th>
                        <th style="width: 120px;">Edit&Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td><img src="/img/@item.Image" alt="" class="img-fluid"></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.PostId" class="btn btn-sm btn-primary">Edit</a>
                            <a href="" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>